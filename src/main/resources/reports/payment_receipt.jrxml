<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports 
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="payment_receipt" language="java" pageWidth="595" pageHeight="200"
              columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="companyName" class="java.lang.String"/>
    <parameter name="reportTitle" class="java.lang.String"/>
    <parameter name="userName" class="java.lang.String"/>
    <parameter name="userEmail" class="java.lang.String"/>
    <parameter name="transactionId" class="java.lang.String"/>
    <parameter name="paymentDate" class="java.lang.String"/>
    <parameter name="planStartDate" class="java.lang.String"/>
    <parameter name="planEndDate" class="java.lang.String"/>
    <parameter name="amount" class="java.math.BigDecimal"/>

    <field name="itemDescription" class="java.lang.String"/>
    <field name="duration" class="java.lang.String"/>
    <field name="unitPrice" class="java.math.BigDecimal"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="totalAmount" class="java.math.BigDecimal"/>

    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[FITDESK - COMPROBANTE DE PAGO]]></text>
            </staticText>
            
            <textField>
                <reportElement x="0" y="30" width="200" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Cliente: " + $P{userName}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="355" y="30" width="200" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Fecha: " + $P{paymentDate}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="355" y="50" width="200" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["ID: " + $P{transactionId}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement x="0" y="0" width="200" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Descripción]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="200" y="0" width="100" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Duración]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="300" y="0" width="85" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Precio Unit.]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="385" y="0" width="70" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Cantidad]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="455" y="0" width="100" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="25">
            <textField>
                <reportElement x="0" y="0" width="200" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{itemDescription}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="200" y="0" width="100" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{duration}]]></textFieldExpression>
            </textField>
            
            <textField pattern="¤#,##0.00">
                <reportElement x="300" y="0" width="85" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="385" y="0" width="70" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>
            
            <textField pattern="¤#,##0.00">
                <reportElement x="455" y="0" width="100" height="25"/>
                <box>
                    <pen lineWidth="1"/>
                </box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalAmount}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <summary>
        <band height="60">
            <textField>
                <reportElement x="0" y="10" width="555" height="15"/>
                <textElement textAlignment="Left">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA["Vigencia del plan: " + $P{planStartDate} + " al " + $P{planEndDate}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="0" y="30" width="555" height="15"/>
                <textElement textAlignment="Center">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[¡Gracias por elegirnos! Disfruta tu entrenamiento.]]></text>
            </staticText>
        </band>
    </summary>
</jasperReport>